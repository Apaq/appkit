{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "declarationDir": "./dist",
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*"
, "../core/src/bundle"  ],
  "exclude": ["node_modules"]
}